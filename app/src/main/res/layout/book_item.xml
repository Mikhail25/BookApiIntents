<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#777777"
    android:elevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_small_book_thumbnail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_book_title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="This is the defailt book title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_small_book_thumbnail"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/authors_label"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            android:text="Author(s): "
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/iv_small_book_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title" />

        <TextView
            android:id="@+id/tv_authors"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text=" Judy, baker, arnorld wesker"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/authors_label"
            app:layout_constraintTop_toBottomOf="@id/tv_book_title" />
        <TextView
            android:id="@+id/rating_label"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            android:text="Rating: "
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/iv_small_book_thumbnail"
            app:layout_constraintTop_toBottomOf="@id/tv_authors" />

        <TextView
            android:id="@+id/tv_rating"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text=" 0.0"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/rating_label"
            app:layout_constraintTop_toBottomOf="@id/tv_authors" />

<TextView
            android:id="@+id/language_label"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textSize="16dp"
            android:text="Lanaguage: "
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/tv_rating"
            app:layout_constraintTop_toBottomOf="@id/tv_authors" />

        <TextView
            android:id="@+id/tv_language"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text=" ED"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/language_label"
            app:layout_constraintTop_toBottomOf="@id/tv_authors" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>